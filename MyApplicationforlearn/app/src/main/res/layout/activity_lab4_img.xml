<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="菜单 :"
        android:textColor="@android:color/holo_orange_dark" />

    <ImageView
        android:id="@+id/img_soup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/soup" />

    <ImageView
        android:id="@+id/img_chips"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/chips" />

    <ImageView
        android:id="@+id/img_hbg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="103dp"
        android:src="@drawable/hbg" />

    <ImageView
        android:id="@+id/img_coke"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/coke" />

    <CheckBox
        android:id="@+id/soup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:text="玉米浓汤"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-113dp"
        android:layout_marginTop="60dp"
        android:checked="false"
        android:text="薯条"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/hbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-73dp"
        android:layout_marginTop="90dp"
        android:checked="false"
        android:text="汉堡"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/coke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-73dp"
        android:layout_marginTop="120dp"
        android:checked="false"
        android:text="可乐"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="-160dp"
        android:layout_marginTop="160dp"
        android:background="#B5BCBB" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-360dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_img"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/soup"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="197dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/hbg"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/coke"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/chips"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="197dp" />

    </LinearLayout>

</LinearLayout>