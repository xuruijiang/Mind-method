<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="菜单 :"
        android:textColor="@android:color/holo_orange_dark" />

    <ImageView
        android:id="@+id/img_soup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/soup" />

    <ImageView
        android:id="@+id/img_chips"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/chips" />

    <ImageView
        android:id="@+id/img_hbg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="103dp"
        android:src="@drawable/hbg" />

    <ImageView
        android:id="@+id/img_coke"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/coke" />

    <CheckBox
        android:id="@+id/soup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:text="玉米浓汤"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-113dp"
        android:layout_marginTop="60dp"
        android:checked="false"
        android:text="薯条"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/hbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-73dp"
        android:layout_marginTop="90dp"
        android:checked="false"
        android:text="汉堡"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/coke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-73dp"
        android:layout_marginTop="120dp"
        android:checked="false"
        android:text="可乐"
        android:textColor="@color/teal_700"
        android:textSize="20dp" />

    <Button
        android:id="@+id/mbut"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-63dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="#DC798F"
        android:text="下单" />

    <Button
        android:id="@+id/but_next"
        android:text="下一页"
        android:backgroundTint="#DC798F"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/foods"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-300dp"
    android:layout_marginTop="230dp"
    android:textColor="#4D83D3"
    android:textSize="20dp" />

    <TextView
        android:id="@+id/hadbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="-150dp"
        android:textColor="#616161"
        android:textSize="18dp" />

</LinearLayout>